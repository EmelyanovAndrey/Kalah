doctype html

//-Измненить настройки
- var baseUrl = "/Kalah/"
- var title = "Kalah"
- var siteName = title
- var menu = [{name: "Главная", link: baseUrl}, {name: "Правила", link: "#"}, {name:"Играть с человеком", link: baseUrl+"game.html"}, {name: "Играть с компьютером", link: baseUrl+"game.html"}, {name: "Профиль", link: "#"}]
- var footerTitle = siteName
- var footerText = "Онлайн игра Калах"
- var dataCopyright = "2016"
- var desingBy = "Ilya Konstantinov"
- var domain = "kalah"
- var webmasterEmail = "ilyakonst95@gmail.com"
- var links = [{name: "СГАУ", link: "http://ssau.ru/"}]

mixin select(items, first)
    select
        option(disabled, selected) #{first}
        each item in items
            option #{item}

html(lang="ru")
    head
        block title
            title #{title}

        meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")

        //Import Google Icon Font
        link(href="http://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")

        //FONTS
        link(href="https://fonts.googleapis.com/css?family=Roboto:400,500&subset=cyrillic", rel="stylesheet")
        link(href="https://fonts.googleapis.com/css?family=Patua+One", rel="stylesheet")

        //Import materialize.css
        link(type="text/css", rel="stylesheet", href="css/materialize.min.css", media="screen,projection")

        //Import my styles
        link(type="text/css", rel="stylesheet", href="css/style.min.css", media="screen,projection")

        //Let browser know website is optimized for mobile
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        //Import jQuery before materialize.js
        script(type="text/javascript", src="https://code.jquery.com/jquery-2.1.1.min.js")
        script(type="text/javascript", src="js/jquery.mb.browser.min.js")
        script(type="text/javascript", src="js/materialize.min.js")

        //My scripts
        script(type="text/javascript", src="js/scripts.min.js")

        block head

        block scripts

    body
        header
            .navbar
                ul#headerMenu.dropdown-content
                    each item in menu
                        li
                            a(href=item.link target="_blank") #{item.name}
                        //-li.diveder
                nav
                    .nav-wrapper.container
                        .large-nav-bar
                            a.brand-logo(href="#{baseUrl}" target="_blank") #{siteName}
                            ul.right
                                each item in menu
                                    li
                                        a.grey-text.text-lighten-3(href=item.link, target="_blank") #{item.name}
                        .mini-nav-bar
                            a.brand-logo.dropdown-button(href="#{baseUrl}", data-activates="headerMenu") #{siteName}


        #main
            block content


        footer
            #more-footer.container
                .row
                    .col.l6.s12
                        h5.white-text #{footerTitle}
                        p.grey-text.text-lighten-4 #{footerText}

                    .col.l4.offset-l2.s12
                        h5.white-text Ссылки
                        ul
                            each item in links
                                li
                                    a.grey-text.text-lighten-3(href=item.link, target="_blank") #{item.name}

            .footer-copyright
                .container.row
                    .col.s12.m6.l6 &copy; #{dataCopyright} Design by #{desingBy}
                    .col.s12.m6.l6
                        a.grey-text.text-lighten-4.right(href="mailto:#{webmasterEmail}") Web-master: admin@#{domain}.com