extends layout

mixin lunka()
    - for(var i = 0; i < 7; i++)
        td.lunka
            span 6

block title
    title #{title} | Игра

block head

block scripts

block content

    -var apponent_name = "Terminator", player_name = "Marcus"

    .game
        .container
            .row
                .apponent
                    img(src=baseUrl+"assets/img/ai-profile.jpg")
                    .nick #{apponent_name}

            .row
                table.board
                    tr
                        td(rowspan=2).kalah.hover
                            span 0

                        +lunka()

                        td(rowspan=2).kalah
                            span 0
                    tr
                        +lunka()

            .row
                .player
                    img(src=baseUrl + "assets/img/profile-test.jpg")
                    .nick #{player_name}

    .row.save-game