extends template/layout




block title
    title #{title} | Войти

block content
    .login
        .container
            .row
                h1 Войти
            .row
                form#loginin
                    .input-field.col.s12
                        i.material-icons.prefix perm_identity
                        input#name.validate(type="text", minlength='4', maxlength="16", data-error="Слишком длинное имя")
                        //form 4 to 16
                        label(for="name") Имя

                    .input-field.col.s12
                        i.material-icons.prefix vpn_key
                        input#password.validate(type="password", minlength='6', maxlength="20")
                        //form 6 to 20
                        label(for="password") Пароль

                    .col.s12
                        a#login.btn.waves-effect.waves-light.large(type="submit" name="action") Войти
                            i.material-icons.right lock
                    .col.s12
                        a.btn.waves-effect.waves-light(href=baseUrl + "registration.html" type="submit" name="action") Зарегистрироваться