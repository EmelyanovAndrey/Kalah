extends template/layout

block title
    title #{title} | Список игр

block content
    -var games = [{name: "Alex", count: "12/8"}, {name: "Igor", count: "10/8"}, {name: "Sveta", count: "6/8"},{name: "Olya", count: "12/8"},{name: "Kostya", count: "12/8"},{name: "Bob", count: "15/8"},{name: "Kate", count: "12/8"},{name: "Alex", count: "12/8"},{name: "Alex", count: "12/8"},{name: "Alex", count: "12/8"},{name: "Alex", count: "12/8"},{name: "Alex", count: "12/8"}]
    .game-list
        .container
            .row
                h1 Список игр
            .row
                    table.highlight.centered#game_list
                        thead
                            tr
                                th №
                                th Против
                                th Камни/Лунки
                        tbody
                            - each val, index in games
                                tr
                                    td #{index + 1}
                                    td #{val.name}
                                    td #{val.count}
            .row
                .col.s12
                    a.btn.waves-effect.waves-light(href=baseUrl+"new-game-human.html") Создать свою игру
                        i.material-icons.right send

        #modal.modal
            .modal-content
                h4 Подтверждение
                p Вы действительно хотите присоединиться к игре?
            .modal-footer
                a.modal-action.modal-close.waves-effect.waves-red.btn-flat(href="#") Нет
                a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href="#") Да
